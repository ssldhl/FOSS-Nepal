<% provide(:title, 'New Meeting Location') %>
<% meta :description => "Create new Meeting Location",
        :keywords => "Create Meeting Location, FOSS Nepal" %>
<header class="jumbotron subhead" id="overview">
  <div class="container">
    <h1>Add location</h1>
    <p class="lead">Add a location to the meeting.</p>
  </div>
</header>
<h1 class="text-center">Create Meeting Location</h1>
<div class="container">
<div class="row">
  <div class="span6 offset3">
    <%= form_for [@current_meeting, @current_meeting.build_location], :url => meeting_location_path(@current_meeting) do |f| %>
    	<%= render 'shared/locationerror_messages' %>

      <%= f.label :longitude %>
      <%= f.text_field :longitude, :id=>"centre_longitude"%>

      <%= f.label :latitude %>
      <%= f.text_field :latitude, :id=>"centre_latitude" %>

      <%= f.label :zoom %>
      <%= f.text_field :gmaps_zoom, :id=>"centre_gmaps_zoom" %>

      <%= gmaps4rails(@json) %>
      <%= render 'shared/gmap' %>

      <%= f.submit "Create location", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
</div>